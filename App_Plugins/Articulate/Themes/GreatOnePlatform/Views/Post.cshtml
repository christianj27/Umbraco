@using Articulate
@using Umbraco.Core
@using Umbraco.Web
@using Umbraco.Core.Models.PublishedContent

@inherits Umbraco.Web.Mvc.UmbracoViewPage<Articulate.Models.PostModel>
@{
    Layout = "~/Views/WebBase.cshtml";
    ViewBag.CssBodyClass = "post-template";
    //var Model = (Articulate.Models.PostModel)Model;
}

@Html.ThemedPartial(Model, "HeaderDescription")

<section class="blog-posts grid-system">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="all-blog-posts">
                    <div class="row">
                        <div class="col-md-8 mx-auto">
                            <div class="blog-post">
                                <div class="blog-thumb">

                                    @if (!Model.CroppedPostImageUrl.IsNullOrWhiteSpace())
                                    {
                                        var thumbnail = Url.GetCropUrl(Model.PostImage, cropAlias: "wide", useCropDimensions: true, htmlEncode: false, upScale: false);
                                        <img class="postImage" alt="@Model.Name" src="@thumbnail" />
                                    }
                                </div>
                                <div class="down-content">
                                    <span>@Html.ThemedPartial(Model, "PostCategory")</span>
                                    <a><h1>@Model.Name</h1></a>
                                    <ul class="post-info">
                                        <li><a href="#">@Model.Author.Name</a></li>
                                        <li><a>@Model.PublishedDate.ToString("MMMM dd, yyyy")</a></li>
                                        @*<li><a href="#">10 Comments</a></li>*@
                                    </ul>
                                    @Model.Body
                                    <div class="post-options">
                                        <div class="row">
                                            <div class="col-6">
                                                <ul class="post-tags">
                                                    <li><i class="fa fa-tags"></i></li>
                                                    <li>
                                                        @Html.ThemedPartial(Model, "PostTags")
                                                    </li>
                                                </ul>
                                            </div>
                                            <div class="col-6">
                                                <ul class="post-share">
                                                    <li><i class="fa fa-share-alt"></i></li>
                                                    <li>
                                                        @*<a href="https://www.facebook.com/sharer/sharer.php?u=@UmbracoContext.UrlAbsolute(Model.Id)">Facebook</a>,*@
                                                        <a href="https://www.facebook.com/sharer/sharer.php?u=@UmbracoContext.UrlAbsolute(Model.Id)"
                                                           onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                                                            <i class="fa fa-2x fa-fw fa-facebook-square"></i>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        @*<a href="http://twitter.com/share?text=@Model.Name&url=@UmbracoContext.UrlAbsolute(Model.Id)"> Twitter</a>*@
                                                        <a href="http://twitter.com/share?text=@Model.Name&url=@UmbracoContext.UrlAbsolute(Model.Id)"
                                                           onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                                                            <i class="fa fa-2x fa-fw fa-twitter"></i>
                                                        </a>                                                    
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
