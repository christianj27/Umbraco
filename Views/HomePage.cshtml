@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{
    Layout = "WebBase.cshtml";
    var blogPage = Model.Root().Descendants().Where(x => x.ContentType.Alias == "blogEntries").FirstOrDefault();

}
<!-- Page Content -->

@{ Html.RenderAction("RenderMainBanner", "HomePage"); }

<section class="blog-posts">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row">
                        @*@{ Html.RenderAction("RenderBlogPost", "HomePage", new { numberOfItems = 4 }); }*@
                        @*@{ Html.Partial("~/Views/Partials/Blog/_PostList.cshtml"); }*@
                        <form action="/search/">
                            <div class="col-lg-8">
                                <div class="form-outline">
                                    <input type="text" name="Query" class="form-control" placeholder="type to search..." autocomplete="on" />
                                    <input type="text" name="Category" class="form-control" placeholder="type to category..." autocomplete="on" />
                                    <input type="text" name="Page" class="form-control" placeholder="type to page..." autocomplete="on" />
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="main-button">
                                    <button>
                                        Search
                                    </button>
                                </div>
                            </div>
                        </form>

                        @if (blogPage != null)
                        {
                            foreach (var article in blogPage.Children.OrderByDescending(x => x.UpdateDate).Take(3))
                            {
                                var bgImage = article.Value<IPublishedContent>("articleImage");
                                <div class="col-lg-12">
                                    <div class="blog-post">
                                        <div class="blog-thumb">
                                            <a href="@article.Url"><img src="@bgImage.Url" alt="@article.Value("articleTitle")"></a>
                                        </div>
                                        <div class="down-content">
                                            <span>Lifestyle</span>
                                            <a href="@article.Url"><h4>@article.Value("articleTitle")</h4></a>
                                            <ul class="post-info">
                                                <li><a href="#">@article.CreatorName</a></li>
                                                <li><a href="#">@article.CreateDate.ToString("MMMM dd, yyyy")</a></li>
                                                @*<li><a href="#">12 Comments</a></li>*@
                                            </ul>
                                            <p>@article.Value("ArticleIntro")</p>
                                            <div class="post-options">
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <ul class="post-tags">
                                                            <li><i class="fa fa-tags"></i></li>
                                                            <li><a href="#">Best Templates</a>,</li>
                                                            <li><a href="#">TemplateMo</a></li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

            @*@{ Html.RenderAction("RenderSideBar", "HomePage"); }*@

        </div>
    </div>
</section>


